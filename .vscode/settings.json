{
  "deno.enable": true,
  "[typescriptreact][typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact][javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": true,
    "source.organizeImports.biome": "always"
  },
  "css.customData": [
    ".vscode/tailwind.json"
  ]
}
