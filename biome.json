{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "all": true,
        "useImportRestrictions": "off",
        "useFilenamingConvention": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noDefaultExport": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "useIgnoreFile": true,
    "clientKind": "git",
    "defaultBranch": "main"
  },
  "files": {
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "tool/*.ts"],
    "ignore": ["**/*.gen.ts", "src/content/", ".vscode/*.json", "deno.json"]
  },
  "javascript": {
    "globals": ["Deno"]
  }
}
