{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "all": true,
        "useImportRestrictions": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noDefaultExport": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "useIgnoreFile": true,
    "clientKind": "git",
    "defaultBranch": "main"
  },
  "files": {
    "include": ["src/**/*.{ts,tsx}"],
    "ignore": [
      "**/.vscode/**/*.json",
      "**/*.gen.ts",
      "src/content/",
      "src/static/",
      "**/*.md",
      "**/*.svg",
      "**/*.ico",
      "**/*.xml",
      "**/*.yaml",
      "**/*.webmanifest",
      "**/.github/**"
    ]
  },
  "javascript": {
    "globals": ["Deno"]
  }
}
